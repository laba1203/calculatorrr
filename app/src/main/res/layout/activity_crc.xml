<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/crc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRC"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="45dp" />

    <TextView
        android:id="@+id/input_type"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="Input type:"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="102dp" />

    <RadioGroup
        android:layout_width="69dp"
        android:layout_height="72dp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="102dp">

        <RadioButton
            android:id="@+id/input_type_bin"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="BIN" />

        <RadioButton
            android:id="@+id/input_type_hex"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="HEX" />
    </RadioGroup>

    <TextView
        android:id="@+id/output_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output type:"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="102dp" />

    <RadioGroup
        android:layout_width="79dp"
        android:layout_height="106dp"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="102dp">

        <RadioButton
            android:id="@+id/output_type_bin"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="BIN" />

        <RadioButton
            android:id="@+id/output_type_dec"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="DEC" />

        <RadioButton
            android:id="@+id/output_type_hex"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="HEX" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="99dp"
        android:layout_height="104dp"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="208dp">

        <RadioButton
            android:id="@+id/crc8"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="CRC -8" />

        <RadioButton
            android:id="@+id/crc16"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="CRC -16" />

        <RadioButton
            android:id="@+id/crc32"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="CRC -32" />
    </RadioGroup>

    <TextView
        android:id="@+id/algorithm_of_crc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Algorithm"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="327dp" />

    <TextView
        android:id="@+id/result_of_crc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="327dp" />

    <TextView
        android:id="@+id/crc8_alg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRC -8 :"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="375dp" />

    <TextView
        android:id="@+id/crc16_alg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRC -16:"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="448dp" />

    <TextView
        android:id="@+id/crc32_alg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRC -32:"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="527dp" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="361dp" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="431dp" />

    <EditText
        android:id="@+id/editText12"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="507dp" />

</androidx.constraintlayout.widget.ConstraintLayout>